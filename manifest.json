{
    "manifest_version": 2,
    "name": "Remote Switch for Pi-Hole",
    "version": "2.1",
    "author": "Spencer Yoder",

    "description": "Lets you Enable/Disable a Pi-Hole with out opening a new tab.",
  
    "icons": {
      "48": "icon/icon-48.png",
      "96": "icon/icon-96.png"
    },
  
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icon/icon-16.png",
            "32": "icon/icon-32.png"
        },

        "default_popup": "popup/popup.html"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "background": {
        "scripts": ["background.js"]
      },

      "permissions": [
        "storage",
        "tabs",
        "http://pi.hole/*",
        "webRequest"]
  }